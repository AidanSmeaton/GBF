<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="5dip" >
	
	<ImageView
		android:id="@+id/place_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:src="@drawable/mini_ic_place"
		android:layout_marginRight="5dip" />
	
	<TextView
		android:id="@+id/place_address0"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:textColor="@color/white"
		android:visibility="gone"
		android:layout_toRightOf="@id/place_image"
		 />
		
	<TextView
		android:id="@+id/place_address1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/place_address0"
		android:layout_marginTop="2dip"
		android:textSize="14dp"
		android:textColor="@color/white"
		android:visibility="gone"
		android:layout_toRightOf="@id/place_image" />
	
	<TextView
		android:id="@+id/place_address2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/place_address1"
		android:layout_marginTop="2dip"
		android:textSize="14dp"
		android:textColor="@color/white"
		android:visibility="gone"
		android:layout_toRightOf="@id/place_image" />
</RelativeLayout>
