<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="5dip" >
	
	<ImageView
		android:id="@+id/searchresult_stop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:src="@drawable/alerts_ic_stop"
		android:layout_marginRight="5dip" />
	
	<ImageView
		android:id="@+id/searchresult_star"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/star_big_on"
		android:layout_marginRight="5dip" />
	
	<TextView
		android:id="@+id/searchresult_stopname"
		android:text="StopName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:textColor="@color/white"
		android:layout_toRightOf="@+id/searchresult_stop" />
		
	<TextView
		android:id="@+id/searchresult_stopstreet"
		android:text="StopStreet"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/searchresult_stopname"
		android:layout_marginTop="2dip"
		android:textSize="14dp"
		android:textColor="@color/white"
		android:layout_toRightOf="@+id/searchresult_stop" />
	
	<TextView
		android:id="@+id/searchresult_stopregion"
		android:text="StopRegion"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/searchresult_stopstreet"
		android:layout_marginTop="2dip"
		android:textSize="14dp"
		android:textColor="@color/white"
		android:layout_toRightOf="@+id/searchresult_stop" />
		
	
</RelativeLayout>
